<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/task_list_margin_bottom"
        android:layout_marginLeft="@dimen/task_list_margin"
        android:layout_marginRight="@dimen/task_list_margin"
        android:layout_marginTop="@dimen/task_list_margin"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_task_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/task_list_margin_top"
                android:layout_marginTop="@dimen/task_list_margin_top"
                android:text="title"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/list_task_title"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/task_list_margin_top"
                android:layout_marginLeft="@dimen/task_list_margin_left"
                android:layout_marginRight="@dimen/task_list_margin_right"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_task_title_outlet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="监测站点："
                        android:textSize="@dimen/list_task_font" />

                    <TextView
                        android:id="@+id/tv_task_outlet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/list_task_font" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_task_title_device"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设备名称："
                        android:textSize="@dimen/list_task_font" />

                    <TextView
                        android:id="@+id/tv_task_device"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/list_task_font" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_task_title_fault_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="故障类型："
                        android:textSize="@dimen/list_task_font" />

                    <TextView
                        android:id="@+id/tv_task_fault_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/list_task_font" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_task_title_fault_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="故障时间："
                        android:textSize="@dimen/list_task_font" />

                    <TextView
                        android:id="@+id/tv_task_fault_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/list_task_font" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_task_handle_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_task_title_handle_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="处理时间："
                        android:textSize="@dimen/list_task_font" />

                    <TextView
                        android:id="@+id/tv_task_handle_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/list_task_font" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_task_finish_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_task_title_finish_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="截止时间："
                        android:textSize="@dimen/list_task_font" />

                    <TextView
                        android:id="@+id/tv_task_finish_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/list_task_font" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_task_title_manager"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="负责人员："
                        android:textSize="@dimen/list_task_font" />

                    <TextView
                        android:id="@+id/tv_task_manager"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/list_task_font" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_task_title_worker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="运维人员："
                        android:textSize="@dimen/list_task_font" />

                    <TextView
                        android:id="@+id/tv_task_worker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/list_task_font" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_task_title_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="任务描述："
                        android:textSize="@dimen/list_task_font" />

                    <TextView
                        android:id="@+id/tv_task_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/list_task_font" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--右侧下拉按钮和下拉框spinner-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/img_select_process_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_down_selection"
                android:src="@mipmap/down_selection"
                android:visibility="visible" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>