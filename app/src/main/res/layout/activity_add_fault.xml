<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--toolbar-->
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_add_fault"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/add_fault_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/add_fault_margin"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="故障类型"
                    android:textSize="@dimen/add_fault_font" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinner_fault_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    >

                </android.support.v7.widget.AppCompatSpinner>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="运维负责人"
                    android:textSize="@dimen/add_fault_font" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinner_fault_manager"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                </android.support.v7.widget.AppCompatSpinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="运维人员"
                    android:textSize="@dimen/add_fault_font" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinner_fault_worker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                </android.support.v7.widget.AppCompatSpinner>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/add_fault_margin"
                android:text="故障开始时间"
                android:textSize="@dimen/add_fault_font" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_fault_begin_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择日期" />

                <TextView
                    android:id="@+id/tv_fault_begin_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btn_fault_begin_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择时间" />

                <TextView
                    android:id="@+id/tv_fault_begin_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/add_fault_margin"
                android:text="完成截止时间"
                android:textSize="@dimen/add_fault_font" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_fault_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择日期" />

                <TextView
                    android:id="@+id/tv_fault_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btn_fault_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择时间" />

                <TextView
                    android:id="@+id/tv_fault_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/add_fault_margin"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="报备状态"
                    android:textSize="@dimen/add_fault_font" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinner_fault_record"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/handle_fault_margin"
                    android:layout_weight="1"
                    android:entries="@array/fault_notify" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/add_fault_margin"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报备时间"
                    android:textSize="@dimen/handle_fault_font" />

                <TextView
                    android:id="@+id/tv_fault_record_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/handle_fault_margin"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:text="清空"
                    android:textColor="@color/blue" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/add_fault_margin"
                android:gravity="left"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_fault_record_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择日期" />

                <TextView
                    android:id="@+id/tv_fault_record_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btn_fault_record_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择时间" />

                <TextView
                    android:id="@+id/tv_fault_record_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/add_fault_margin"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="故障描述"
                    android:textSize="@dimen/add_fault_font" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edit_fault_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/add_fault_margin"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="故障备注"
                    android:textSize="@dimen/add_fault_font" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edit_fault_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="5" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_fault_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/add_fault_margin"
                android:text="提交" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>