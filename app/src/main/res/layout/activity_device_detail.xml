<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--toolbar-->
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_device_detail"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/device_detail_margin"
        android:paddingRight="@dimen/device_detail_margin"
        android:paddingTop="@dimen/device_detail_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/device_detail_text_margin"
                android:text="设备名称："
                android:textSize="@dimen/device_detail_font" />

            <TextView
                android:id="@+id/tv_detail_device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/device_detail_text_margin"
                android:textColor="@color/black"
                android:textSize="@dimen/device_detail_font" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/device_detail_text_margin"
                android:text="设备类型："
                android:textSize="@dimen/device_detail_font" />

            <TextView
                android:id="@+id/tv_detail_device_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/device_detail_text_margin"
                android:textColor="@color/black"
                android:textSize="@dimen/device_detail_font" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/device_detail_text_margin"
                android:text="设备型号："
                android:textSize="@dimen/device_detail_font" />

            <TextView
                android:id="@+id/tv_detail_device_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/device_detail_text_margin"
                android:textColor="@color/black"
                android:textSize="@dimen/device_detail_font" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/device_detail_text_margin"
                android:text="生产厂商："
                android:textSize="@dimen/device_detail_font" />

            <TextView
                android:id="@+id/tv_detail_mfr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/device_detail_text_margin"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/device_detail_font" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/device_detail_text_margin"
                android:text="企业名称："
                android:textSize="@dimen/device_detail_font" />

            <TextView
                android:id="@+id/tv_detail_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/device_detail_text_margin"
                android:textColor="@color/black"
                android:textSize="@dimen/device_detail_font" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/device_detail_text_margin"
                android:text="站点名称："
                android:textSize="@dimen/device_detail_font" />

            <TextView
                android:id="@+id/tv_detail_outlet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/device_detail_text_margin"
                android:textColor="@color/black"
                android:textSize="@dimen/device_detail_font" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="安装时间："
                android:textSize="@dimen/device_detail_font" />

            <TextView
                android:id="@+id/tv_detail_install_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/device_detail_font" />

        </LinearLayout>

    </LinearLayout>
    
</LinearLayout>